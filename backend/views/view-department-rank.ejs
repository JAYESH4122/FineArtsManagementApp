<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Department Rankings</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-5">
    <h1 class="text-center mb-4">Department Rankings</h1>

    <% if (error) { %>
      <div class="alert alert-danger text-center" role="alert">
        <%= error %>
      </div>
    <% } %>

    <% if (success) { %>
      <div class="alert alert-success text-center" role="alert">
        <%= success %>
      </div>
    <% } %>

    <div class="table-responsive">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Rank</th>
            <th>Department Name</th>
            <th>Total Points</th>
          </tr>
        </thead>
        <tbody>
          <% if (departmentRankings.length > 0) { %>
            <% departmentRankings.forEach((ranking, index) => { %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= ranking.departmentName %></td>
                <td><%= ranking.totalPoints %></td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="3" class="text-center">No department rankings found.</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</body>
</html>
