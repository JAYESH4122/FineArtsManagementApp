<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Manage Profile</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-5">
    <h1 class="text-center mb-4">View Profile</h1>
    <form action="/student/manage-profile" method="POST" class="border p-4 rounded shadow-sm">
      <!-- Name -->
      <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input
          type="text"
          id="name"
          name="name"
          class="form-control"
          value="Jayesh"
          required
        />
      </div>

      <!-- Roll Number -->
      <div class="mb-3">
        <label for="rollNo" class="form-label">Roll Number</label>
        <input
          type="text"
          id="rollNo"
          name="rollNo"
          class="form-control"
          value="10"
          readonly
        />
      </div>

      <!-- Class -->
      <div class="mb-3">
        <label for="class" class="form-label">Class</label>
        <input
          type="text"
          id="class"
          name="class"
          class="form-control"
          value="3RD Year"
          readonly
        />
      </div>

      <!-- Department -->
      <div class="mb-3">
        <label for="department" class="form-label">Department</label>
        <input
          type="text"
          id="department"
          name="department"
          class="form-control"
          value="Computer Science"
          readonly
        />
      </div>

      <!-- Phone Number -->
      <div class="mb-3">
        <label for="phone" class="form-label">Phone Number</label>
        <input
          type="text"
          id="phone"
          name="phone"
          class="form-control"
          value="6282438027"
          required
        />
      </div>
    </form>
  </div>
</body>
</html>
